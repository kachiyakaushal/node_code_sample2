
<div class="m-grid__item m-grid__item--fluid  m-grid__item--order-tablet-and-mobile-1  m-login__wrapper">
	<!--begin::Head-->
	{{!-- <div class="m-login__head">
		<span>Already have an account?</span>
		<a href="/admin" class="m-link m--font-danger">Login here</a>
	</div> --}}
	<!--end::Head-->

	<!--begin::Body-->
	<div class="m-login__body">

		<!--begin::Signin-->
		<div class="m-login__signin">
			<div class="m-login__title">
				<h3>Reset Password</h3>
			</div>

			{{> messages }}

			<!--begin::Form-->
			<form class="m-login__form m-form mb-0" id="resetpass_form" action="/auth/passwordreset" method="POST">
				<input type="hidden" name="token" value="{{token}}" />
				<div class="form-group m-form__group">
					<input class="form-control m-input m-login__form-input--last" id="password" type="password"
						placeholder="Password" name="password">
				</div>
				<div class="form-group m-form__group">
					<input class="form-control m-input m-login__form-input--last" type="password" placeholder="Confirm Password" name="cpassword">
				</div>
				<!--begin::Action-->
				<div class="m-login__action">					
					<a href="/auth" class="m-link">
						<span>Clieck to login</span>
					</a>
					<button type="submit" class="btn btn-primary m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">Save Password</button>
				</div>
				<!--end::Action-->
			</form>
			<!--end::Form-->

		</div>
		<!--end::Signin-->
	</div>
	<!--end::Body-->
</div>
	