
<div class="m-grid__item m-grid__item--fluid  m-grid__item--order-tablet-and-mobile-1  m-login__wrapper">
	<!--begin::Head-->
	{{!-- <div class="m-login__head">
		<span>Already have an account?</span>
		<a href="/admin" class="m-link m--font-danger">Login here</a>
	</div> --}}
	<!--end::Head-->

	<!--begin::Body-->
	<div class="m-login__body">

		<!--begin::Signin-->
		<div class="m-login__signin">
			<div class="m-login__title">
				<h3>Forgot Password</h3>
			</div>

			{{> messages }}

			<!--begin::Form-->
			<form class="m-login__form m-form mt-4 mb-0" id="forgot_form" action="/auth/forgotpassword" method="POST">

				<div class="m-alert m-alert--icon m-alert--icon-solid m-alert--outline alert alert-brand alert-dismissible fade show mb-5" role="alert">
					<div class="m-alert__icon">
						<i class="flaticon-exclamation-1"></i>
						<span></span>
					</div>
					<div class="m-alert__text">
					  Enter your registered email address in below box, our system will send you reset password email with link on your email address 	
					</div>				  	
				</div>

				<div class="form-group m-form__group">
					<input class="form-control m-input" type="email" placeholder="Email Address" name="email">
				</div>
				<!--begin::Action-->
				<div class="m-login__action">					
					<a href="/auth" class="m-link">
						<span>Click to login</span>
					</a>
					<button type="submit" class="btn btn-metal m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--brand">Send Email</button>
				</div>
				<!--end::Action-->
			</form>
			<!--end::Form-->

		</div>
		<!--end::Signin-->
	</div>
	<!--end::Body-->
</div>
	